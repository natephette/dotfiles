# List directory contents
alias ls="ls --color=auto"
alias ll="ls -al"
alias la="ls -AF"
alias sl="ls"

# Editor
alias vim="nvim"

# Interpreters
alias py="python"
alias ipy="ipython"
alias rb="ruby"

# Grep/search
alias grep="grep --color=auto --exclude='*.pyc' --exclude-dir=.git"
alias ag='ag --color-match "0;31" --pager "less -FRSX"'

# Docker
alias docker_prune_images="docker images | awk '/<none>/ { print $3 }' | xargs docker rmi"

# Ansible
alias ans="ansible"
alias ap="ansible-playbook"
